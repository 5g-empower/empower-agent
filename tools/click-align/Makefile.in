SHELL = @SHELL@

srcdir := @srcdir@
top_srcdir := @top_srcdir@
top_builddir := ../..
subdir := tools/click-align

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
sbindir = @sbindir@
libdir = @libdir@
mandir = @mandir@

VPATH = .:$(top_srcdir)/$(subdir):$(top_srcdir)/tools/lib:$(top_srcdir)/lib

CC = @CC@
CPP = @CPP@
CXX = @CXX@
CXXCPP = @CXXCPP@
PACKAGE = @PACKAGE@
VERSION = @VERSION@
INSTALL = @INSTALL@
mkinstalldirs = @top_srcdir@/mkinstalldirs

.SUFFIXES:
.SUFFIXES: .S .c .cc .o .s

.c.o:
	$(COMPILE) -c $<
.s.o:
	$(COMPILE) -c $<
.S.o:
	$(COMPILE) -c $<
.cc.o:
	$(CXXCOMPILE) -c $<


OBJS = vectori.o vectorv.o bitvector.o hashmapi.o straccum.o string.o error.o \
	elementt.o routert.o lexert.o confparse.o archive.o toolutils.o \
	alignment.o alignclass.o \
	clp.o @LIBOBJS@ click-align.o

CPPFLAGS = @CPPFLAGS@ -MMD -DCLICK_TOOL
CFLAGS = @CFLAGS@
CXXFLAGS = @CXXFLAGS@ -fno-exceptions -fno-rtti

DEFS = @DEFS@ -I. -I$(top_builddir) -I$(srcdir) \
	-I$(top_srcdir)/tools/lib -I$(top_srcdir)/lib
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@

CXXCOMPILE = $(CXX) $(DEFS) $(INCLUDES) $(CPPFLAGS) $(CXXFLAGS)
CXXLD = $(CXX)
CXXLINK = $(CXXLD) $(CXXFLAGS) $(LDFLAGS) -o $@
COMPILE = $(CC) $(DEFS) $(INCLUDES) $(CPPFLAGS) $(CFLAGS)
CCLD = $(CC)
LINK = $(CCLD) $(CFLAGS) $(LDFLAGS) -o $@

all: click-align

click-align: Makefile $(OBJS)
	$(CXXLINK) $(OBJS)

Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	cd $(top_builddir) \
	  && CONFIG_FILES=$(subdir)/$@ CONFIG_ELEMLISTS=no CONFIG_HEADERS= $(SHELL) ./config.status

DEPFILES := $(wildcard *.d)
ifneq ($(DEPFILES),)
include $(DEPFILES)
endif

install: click-align
	$(mkinstalldirs) $(bindir)
	$(INSTALL) click-align $(bindir)/click-align
install-man:

clean:
	rm -f *.d *.o click-align
distclean: clean
	-rm -f Makefile

.PHONY: all clean distclean install install-bin install-man
